<%= form_with(model: brand) do |form| %>
  <div class="mb-4">
    <%= form.label :region_id, "Регион", class: "form-label" %>
    <%= form.collection_select :region_id, @regions, :id, :name, {:include_blank => true}, {class: "form-control"} %>
  </div>
  <div class="mb-4">
    <%= form.label :address, "Адрес", class: "form-label" %>
    <%= form.text_field :address, class: "form-control" %>
  </div>
  <div class="mb-4">
    <%= form.label :name, "Название", class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <div class="mb-4">
    <%= form.label :description, "Описание", class: "form-label" %>
    <%= form.text_area :description, rows: "6", class: "form-control" %>
  </div>
  <div class="mb-4">
    <%= form.label :phone, "Телефон", class: "form-label" %>
    <%= form.text_field :phone, class: "form-control" %>
  </div>
  <div class="mb-4">
    <%= form.label :email, "Email", class: "form-label" %>
    <%= form.text_field :email, class: "form-control" %>
  </div>
  <div class="mb-4">
    <%= form.label :inn, "ИНН", class: "form-label" %>
    <%= form.text_field :inn, class: "form-control" %>
  </div>
  <div class="mb-4">
    <%= form.label :ogrn, "ОГРН", class: "form-label" %>
    <%= form.text_field :ogrn, class: "form-control" %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>

