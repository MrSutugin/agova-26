<aside class="col-lg-4 col-xl-3 border px-3 rounded mb-4">
  <div class="d-flex d-md-block d-lg-flex align-items-start align-items-center py-4">
    <%= link_to dashboard_path, data: {turbo: "false"}  do %>
      <%= image_tag 'noavatar.png', class: "rounded-circle border", width: "68" %>
    <% end %>
    <div class="pt-md-2 pt-lg-0 ps-3 ps-md-0 ps-lg-3">
      <h3 class="h6 mb-0">
        <%= model.account.profile.firstname  %>
        <%= model.account.profile.lastname  %>
      </h3>
      <span class="star-rating">
        <i class="star-rating-icon fi-star-filled active"></i>
        <i class="star-rating-icon fi-star-filled active"></i>
        <i class="star-rating-icon fi-star-filled active"></i>
        <i class="star-rating-icon fi-star-filled active"></i>
        <i class="star-rating-icon fi-star-filled "></i>
      </span>
      <ul class="list-unstyled fs-sm mt-3 mb-0">
        <li><a class="nav-link fw-normal p-0" href="tel:3025550107">
            <i class="fi-phone opacity-60 me-2"></i>(302) 555-0107</a>
        </li>
        <li>
          <a class="nav-link fw-normal p-0" href="mailto:annette_black@email.com">
            <i class="fi-mail opacity-60 me-2"></i>annette_black@email.com
          </a>
        </li>
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <button type="button" class="btn btn-outline-secondary w-100 mb-4 px-0" data-bs-toggle="modal" data-bs-target="#settingsModal">
        <i class="uil uil-telegram-alt fa-lg me-2"></i>
        Сообщение
      </button>
    </div>
  </div>
  <div class="modal fade" id="settingsModal" tabindex="-1" aria-labelledby="settingsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h3 class="h6 modal-title" id="settingsModalLabel">Отправить сообщение</h3>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <%= form_for :profile, url: nil, action: :update, method: :post do |form| %>
          <div class="modal-body">
            <div class="mb-4">
              <%= form.label :bio, "Ваше сообщение", class: "form-label" %>
              <%= form.text_area :bio, rows:"6", class: "form-control" %>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
            <%= form.submit "Отправить", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="offcanvas offcanvas-start offcanvas-collapse" id="filters-sidebar">
    <div class="offcanvas-header d-flex d-lg-none align-items-center">
      <h3 class="h6 mb-0">Отправить запрос</h3>
      <button class="btn-close" type="button" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body">
      <div class="pb-4 mb-2">
      </div>
    </div>
  </div>
</aside>
