<header class="navbar-light fixed-top header-static bg-mode">
  <nav class="navbar navbar-expand-lg">
    <div class="container">
      <%= link_to root_path, class: "navbar-brand" do %>
        <%= image_tag "logo.png", class: "light-mode-item navbar-brand-item" %>
        <%= image_tag "logo.png", class: "dark-mode-item navbar-brand-item" %>
      <% end %>
      <button class="navbar-toggler ms-auto icon-md btn btn-light p-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-animation">
          <span></span>
          <span></span>
          <span></span>
        </span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav navbar-nav-scroll">
          <li class="nav-item">
            <a class="nav-link" href="my-profile-connections.html">Акции</a>
          </li>
        </ul>
      </div>
      <ul class="nav flex-nowrap align-items-center ms-sm-3 list-unstyled">
        <li class="nav-item ms-2 dropdown">
          <a class="nav-link icon-md btn btn-light p-0" href="index.html#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" data-bs-auto-close="outside">
            <span class="badge-notif animation-blink"></span>
            <i class="uil uil-user fa-xl"></i>
          </a>
          <ul class="dropdown-menu dropdown-animation dropdown-menu-end pt-3 small me-md-n3" aria-labelledby="profileDropdown">
            <% if rodauth.logged_in? %>
              <li>
                <%= link_to rodauth.logout_path, data: { turbo_method: :post }, class: "dropdown-item" do %>
                <% end %>
              </li>
            <% else %>
              <li>
                <%= link_to rodauth.login_path, class: "dropdown-item" do %>
                  <i class="uil uil-sign-in-alt me-2 fa-xl"></i>
                  <span>Вход</span>
                <% end %>
              </li>
              <li>
                <%= link_to rodauth.create_account_path, class: "dropdown-item" do %>
                  <i class="uil uil-user-plus me-2 fa-xl"></i>
                  <span>Регистрация</span>
                <% end %>
              </li>
            <% end %>
          </ul>
        </li>
      </ul>
    </div>
  </nav>
</header>